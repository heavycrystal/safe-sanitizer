<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="360dp"
    android:background="@color/sea_light"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:theme="@style/Theme.Snazzy"
        tools:context=".ViewCategory">

        <EditText
            android:id="@+id/editItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="0dp"
            android:hint="Name" />

        <EditText
            android:id="@+id/editItemUnit"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editItemName"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="57dp"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:hint="Unit"
            android:inputType="text" />

        <EditText
            android:id="@+id/priceView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editItemName"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="58dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/uploadItemImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/editItemName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#75D4FF"
            android:backgroundTintMode="add"
            android:fontFamily="@font/viga"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowColor="#000000"
            android:text="Upload Image"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            android:typeface="normal"
            android:visibility="visible"
            app:backgroundTint="#75D4FF"
            app:backgroundTintMode="add"
            app:cornerRadius="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editItemName"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_toStartOf="@+id/editItemUnit"
            android:layout_toLeftOf="@id/editItemUnit"
            android:orientation="vertical">

            <Button
                android:id="@+id/upBtn"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:background="@android:drawable/arrow_up_float"
                android:backgroundTint="#1565C0"
                android:backgroundTintMode="add"
                android:drawableTint="#FFFFFF"
                android:longClickable="true" />

            <TextView
                android:id="@+id/upNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:rotationX="45"
                android:rotationY="0"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/midNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/downNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/editItemUnit"
                android:rotationX="-45"
                android:text="TextView"
                android:textSize="20sp" />

            <Button
                android:id="@+id/downBtn"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/arrow_down_float"
                android:backgroundTint="#2196F3"
                android:backgroundTintMode="add"
                android:longClickable="true" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="100dp"
            android:contextClickable="false"
            android:cropToPadding="false"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/whatsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadItemImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/whatsapp"
            android:text="SHARE VIA WHATSAPP"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/eMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whatsApp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FF7777"
            android:text="SHARE VIA EMAIL"
            app:cornerRadius="40dp" />


    </RelativeLayout>
</ScrollView>