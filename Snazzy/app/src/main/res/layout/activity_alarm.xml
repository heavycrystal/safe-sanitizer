<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="@color/pale_honey"
    android:backgroundTintMode="add"
    android:padding="30dp"
    tools:context=".AlarmActivity">

    <Button
        android:id="@+id/uploadAttach"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/ochward"
        android:text="Upload Attachment"
        android:textSize="18sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmName" />

    <Button
        android:id="@+id/setAlarm"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="@color/ochward"
        android:onClick="setAlarm"
        android:text="Set"
        android:textSize="18sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/viga"
        android:text="Set a Reminder"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/alarmName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <EditText
        android:id="@+id/alarmName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/details_background"
        android:ems="10"
        android:hint="Name of Alarm"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alarmTime"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/ochward"
        android:onClick="showClock"
        android:text="Time"
        android:textSize="18sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/alarmDate"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/ochward"
        android:onClick="showCalendar"
        android:text="Date"
        android:textSize="18sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>